{
  "name": "@codeblock/styled",
  "description": "Prism themes for codeblock implemented using styled-components",
  "version": "0.0.1",
  "main": "",
  "license": "MIT",
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "babel src --out-dir lib --extensions .ts,.tsx --ignore **/*.stories.tsx && tsc --emitDeclarationOnly",
    "watch": "babel --watch src --out-dir lib --extensions .ts,.tsx",
    "clean": "rm -rf .tsbuildinfo && rm -rf lib",
    "rebuild": "yarn clean && yarn build",
    "prepublishOnly": "yarn rebuild"
  },
  "peerDependencies": {
    "styled-components": ">=1.0.0"
  },
  "dependencies": {
    "@codeblock/core": "0.0.1"
  },
  "devDependencies": {
    "styled-components": "^5.0.1",
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-typescript": "^7.8.3",
    "@types/styled-components": "^4.4.2"
  }
}
