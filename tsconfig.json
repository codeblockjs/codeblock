{
  "compilerOptions": {
    "incremental": true,
    "module": "ESNext",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "target": "ES5",
    "sourceMap": true,
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "lib",
    "**/*.spec.ts",
    "**/*.story.tsx",
    "**/*.stories.tsx"
  ]
}
